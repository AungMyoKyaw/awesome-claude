# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Universal defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Web Technologies
[*.{html,htm,xml,xhtml,svg,css,scss,sass,less,stylus,styl}]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
indent_style = space

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# Documentation
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Python files
[*.py]
indent_size = 4
indent_style = space
max_line_length = 88

# Java files
[*.java]
indent_size = 4
indent_style = space

# C/C++ files
[*.{c,cpp,h,hpp,cc,cxx}]
indent_size = 4
indent_style = space

# C# files
[*.cs]
indent_size = 4
indent_style = space

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
indent_style = space

# PHP files
[*.php]
indent_size = 4
indent_style = space

# Ruby files
[*.rb]
indent_size = 2
indent_style = space

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_size = 2
indent_style = space

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_size = 2
indent_style = space

# SQL files
[*.{sql,ddl}]
indent_size = 2
indent_style = space

# Configuration templates
[*.{mustache,handlebars,hbs}]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2
indent_style = space

# Svelte files
[*.svelte]
indent_size = 2
indent_style = space

# Terraform files
[*.{tf,tfvars}]
indent_size = 2
indent_style = space

# Kubernetes manifests
[*.{k8s,yaml,yml}]
indent_size = 2

# Editor-specific files
[*.{editorconfig,gitignore,gitattributes,dockerignore}]
indent_size = 2